<!-- Chatbot Modal -->
<div id="chatModal" style="display: none; position: fixed; top: 10%; left: 10%; width: 80%; height: 80%; z-index: 10000; background-color: white; border: 1px solid #ccc; border-radius: 8px;">
    <iframe src="{{config.wwwroot}}/local/chatbot/fullchat.php" style="width: 100%; height: 90%; border: none;"></iframe>
    <button onclick="document.getElementById('chatModal').style.display='none'" style="width: 100%; padding: 10px; background-color: #dc3545; color: white; border: none; border-radius: 0 0 8px 8px;">
